- unless notitle || !has_header?
  %h1{:id=>@id}=@header.title
=content
- unless !footnotes? || attr?(:nofootnotes)
  #footnotes
    %hr
    - footnotes.each do |fn|
      .footnote{:id=>['_footnote', fn.index]}
        = succeed ". #{fn.text}" do
          %a(href="#_footnoteref_#{fn.index}")=fn.index
